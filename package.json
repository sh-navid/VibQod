{
  "name": "NaBotX",
  "displayName": "N8X eXtension",
  "description": "NaBotX is your AI-Powered VSCode Assistant eXtension; A product of Infinite Workflow Automation Extension (8WA).",
  "publisher": "sh-navid",
  "version": "0.2.841",
  "icon": "assets/logos/N8X.png",
  "license": "Apache-2.0",
  "author": "NaBotX contributors",
  "privacy": "https://github.com/sh-navid/NabotX#privacy",
  "repository": {
    "type": "git",
    "url": "https://github.com/sh-navid/N8X"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "AI"
  ],
  "keywords": [
    "AI",
    "LLM",
    "Assistant"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "nabotx.openSettings",
        "title": "N8X: Open Settings"
      },
      {
        "command": "nabotx.addToChat",
        "title": "N8X: Add to Chat"
      },
      {
        "command": "nabotx.addFileToChat",
        "title": "N8X: Add File to chat"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "nabotx.openSettings",
          "group": "navigation",
          "when": "editorFocus"
        }
      ],
      "editor/context": [
        {
          "command": "nabotx.addToChat",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "nabotx.addFileToChat",
          "group": "navigation"
        }
      ]
    },
    "viewsContainers": {
      "sidebar": [
        {
          "id": "nabotxSidePanel",
          "title": "N8X Code eXtension",
          "icon": "assets/logos/N8X.png"
        }
      ],
      "activitybar": [
        {
          "id": "nabotxActivityBar",
          "title": "N8X Code eXtension",
          "icon": "assets/logos/N8X.png"
        }
      ]
    },
    "views": {
      "nabotxActivityBar": [
        {
          "type": "webview",
          "id": "nabotxActivityBarView",
          "name": "NaBotX",
          "icon": "assets/logos/N8X.png"
        }
      ],
      "nabotxSidePanel": [
        {
          "type": "webview",
          "id": "nabotxSidePanelView",
          "name": "NaBotX",
          "icon": "assets/logos/N8X.png"
        }
      ]
    },
    "configuration": {
      "title": "N8X Configuration",
      "properties": {
        "nabotx.path": {
          "type": "string",
          "default": "",
          "description": "The path to the LLM server."
        },
        "nabotx.token": {
          "type": "string",
          "default": "",
          "description": "The API token for LLM model."
        },
        "nabotx.model": {
          "type": "string",
          "default": "",
          "description": "The model to use for AI assistance."
        },
        "nabotx.previewUrl": {
          "type": "string",
          "default": "http://localhost:3000/",
          "description": "The URL to display in the preview tab."
        }
      }
    }
  },
  "scripts": {
    "test": "jest"
  },
  "devDependencies": {
    "@vscode/test-electron": "^2.5.2",
    "@vscode/test-cli": "^0.0.10",
    "vscode-test": "^1.6.1",
    "eslint": "^9.25.1",
    "jest": "^30.1.2"
  },
  "files": [
    "configs/**/*",
    "assets/**/*",
    "styles/**/*",
    "views/**/*",
    "src/**/*",
    "dist/*"
  ],
  "activation": true
}
